<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.DepartmentsEntity" table="departments" schema="act4_1">
        <id name="deptNum">
            <column name="dept_num" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <property name="office">
            <column name="office" sql-type="varchar(20)" length="20" not-null="true"/>
        </property>
        <set name="teachersByDeptNum" inverse="true">
            <key>
                <column name="dept_num" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="entities.TeachersEntity"/>
        </set>
    </class>
</hibernate-mapping>