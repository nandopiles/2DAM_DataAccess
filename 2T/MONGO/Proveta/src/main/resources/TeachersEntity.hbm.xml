<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.TeachersEntity" table="teachers" schema="act4_1">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(15)" length="15" not-null="true"/>
        </property>
        <property name="surname">
            <column name="surname" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="startDate">
            <column name="start_date" sql-type="date" not-null="true"/>
        </property>
        <property name="deptNum">
            <column name="dept_num" sql-type="int" not-null="true"/>
        </property>
        <property name="salary">
            <column name="salary" sql-type="int" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>